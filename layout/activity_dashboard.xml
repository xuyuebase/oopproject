<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 顶部头像 + 名字 -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/dashAvatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:background="@drawable/avatar_shadow"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/dashName"
            android:text="Welcome!"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- 顶部绿色标题 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="#0F5132"
        android:gravity="center">

        <TextView
            android:text="Dashboard"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <!-- 主体可滚动区域 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Summary -->
            <TextView
                android:text="Today's Summary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#0F5132"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_card"
                android:layout_margin="20dp"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:text="Consumed"
                    android:textSize="16sp"
                    android:textColor="#666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtConsumed"
                    android:text="0 kcal"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="#F28A1E"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Burned"
                    android:textSize="16sp"
                    android:textColor="#666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtBurned"
                    android:text="0 kcal"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="#0F5132"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Remaining"
                    android:textSize="16sp"
                    android:textColor="#666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtRemaining"
                    android:text="0 kcal"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="#FF5722"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <!-- 四大按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnFoodLog"
                        android:text="Food Log"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:background="@drawable/green_button"
                        android:textColor="#FFF"
                        android:layout_marginRight="10dp"/>

                    <Button
                        android:id="@+id/btnProfile"
                        android:text="Profile"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:background="@drawable/green_button"
                        android:textColor="#FFF"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <Button
                        android:id="@+id/btnGoals"
                        android:text="Goals"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:background="@drawable/green_button"
                        android:textColor="#FFF"
                        android:layout_marginRight="10dp"/>

                    <Button
                        android:id="@+id/btnFeed"
                        android:text="Feed"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:background="@drawable/green_button"
                        android:textColor="#FFF"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- 底部导航栏 -->
    <include layout="@layout/bottom_nav"/>

</LinearLayout>
